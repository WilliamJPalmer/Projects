<fieldset style="padding:20px;text-align:center;background-color:#ABD3E5;border:1px solid #777777">
  <legend style="text-align:center;font-size:24px;font-weight:bold;color:#777777;">Register</legend>
  <form  action="/users/" method="post">
    <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>"><br>
    <input style="margin-bottom:10px;"  type="text" name="first_name" placeholder="First Name"><br>
    <input style="margin-bottom:10px;"  type="text" name="last_name" placeholder="Last Name"><br>
    <input style="margin-bottom:10px;"  type="text" name="email" placeholder="Email Address"><br>
    

    <input style="margin-bottom:10px;"  type="password" name="password" placeholder="Password"><br>
    <input type="submit" name="register" value="Register">
  </form>
</fieldset>

<fieldset style="padding:20px;text-align:center;background-color:#ffffff;border:1px solid #777777">
  <legend style="text-align:center;font-size:24px;font-weight:bold;color:#777777;">Login</legend>
    <form action="/users/login" method="post">
      <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
      <input style="margin-bottom:10px;"  type="text" name="email" value="" placeholder="Email"><br>
      <input style="margin-bottom:10px;"  type="password" name="password" value="" placeholder="Password"><br>
      <input type="submit" name="login" value="Log In">

    </form>
</fieldset>
